//- index.pug
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")

        style 
            include styles/style.css

        block head-ext
            title Book Bliss | A space for people to escape
        
        link(rel="stylesheet" href="https://unpkg.com/boxicons@latest/css/boxicons.min.css")
        link(rel='preconnect' href='https://fonts.googleapis.com')
        link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
        link(href='https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,600;0,700;1,300;1,400;1,600;1,700&display=swap' rel='stylesheet')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384â€”QWTKZyjpPEjISv5WaRU90FeRpok6YctnYmDr5pNlyT2bRjXhJMhjY6hW+ALEwIH', crossorigin='anonymous')

    body
        //- Navbar with updated search form
        nav.navbar
            .logo
                h2 Book Bliss
            .navmenu
                .search-box
                    form(action="/search" method="GET" class="search-form")
                        input(type="search" name="q" class="search" placeholder="Search Books" required)
                ul.nav-actions
                    li
                        a(href="/") Home
                    span.nav-separator
                    li
                        a(href="/#categories") Categories
                    li
                        a(href="/#about") About
                    li
                        a(href="/#contactus") Contact US
                    if user
                        li
                            a(href="/account")= user.first_name
                        li
                            a(href="/cart") Cart
                    else
                        li
                            a(href="/account") My Account


        block content

        //- Footer
        footer
            .container
                .row
                    .col-6.col-md-4
                        h3.fw-bold Book Bliss
                        p.pt-2 Your favorite BookShop
                    .col
                        h4 Menu
                        ul.list-unstyled.pt-2
                            li.py-1 
                                a(href="/home") Home
                            li.py-1 
                                a(href="/#categories") Categories     
                            li.py-1 
                                a(href="/#about") About
                            li.py-1 
                                a(href="/#contact") Contact us
                    .col
                        h4 Categories
                        ul.list-unstyled.pt-2
                            li.py-1 Finance
                            li.py-1 Psychology 
                            li.py-1 Romance
                            li.py-1 SelfHelp
                            li.py-1 Fiction
                            li.py-1 Horror
                    .col-6.col-lg-3
                        h4 Social Media Links
                        div.social-links(style="display: flex; gap: 10px;") 
                           a(href="https://www.facebook.com/yourprofile" target="_blank" rel="noopener noreferrer")
                             i.fab.fa-facebook(style="font-size: 1.5rem;  ") Facbook  
                           a(href="https://www.instagram.com/yourprofile" target="_blank" rel="noopener noreferrer")
                               i.fab.fa-instagram(style="font-size: 1.5rem;  ") Instagram
                           a(href="https://x.com/yourprofile" target="_blank" rel="noopener noreferrer")
                               i.fab.fa-twitter(style="font-size: 1.5rem;  ") X
                    .footerBottom
                        p @2024 All Rights Reserved By Free Online Book Shop


        //- Scripts
        script.
            // Add instant search functionality (optional)
            document.querySelector('.search').addEventListener('keyup', function(e) {
                if (e.key === 'Enter') {
                    e.target.closest('form').submit();
                }
            });

            // Prevent empty searches
            document.querySelector('.search-form').addEventListener('submit', function(e) {
                const searchInput = this.querySelector('.search');
                if (!searchInput.value.trim()) {
                    e.preventDefault();
                }
            });

        script(src="/javascripts/script.js")
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>

