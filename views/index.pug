//- index.pug
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")

        style 
            include styles/style.css

        block head-ext
            title Book Bliss | A space for people to escape
        
        link(rel="stylesheet" href="https://unpkg.com/boxicons@latest/css/boxicons.min.css")
        link(rel='preconnect' href='https://fonts.googleapis.com')
        link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
        link(href='https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,600;0,700;1,300;1,400;1,600;1,700&display=swap' rel='stylesheet')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384â€”QWTKZyjpPEjISv5WaRU90FeRpok6YctnYmDr5pNlyT2bRjXhJMhjY6hW+ALEwIH', crossorigin='anonymous')

    body
        //- Navbar with updated search form
        nav.navbar
            .logo
                h2 Book Bliss
            .navmenu
                .search-box
                    form(action="/search" method="GET" class="search-form")
                        input(type="search" name="q" class="search" placeholder="Search Books" required)
                ul.nav-actions
                    li
                        a(href="/") Home
                    span.nav-separator
                    li
                        a(href="/#categories") Categories
                    li
                        a(href="/#about") About
                    li
                        a(href="/#contactus") Contact US
                    if user
                        li
                            a(href="/account") My Account
                        li
                            a(href="/cart") Cart
                    else
                        li
                            a(href="/account") Login/Sign Up


        block content

        footer.footer
            .footer-content
                .footer-section
                    h3.footer-title Book Bliss
                    p.footer-subtitle Your favorite BookShop
                    .footer-socials
                        a(href="https://www.facebook.com/yourprofile" target="_blank" rel="noopener noreferrer" aria-label="Facebook")
                            i.fab.fa-facebook
                        a(href="https://www.instagram.com/yourprofile" target="_blank" rel="noopener noreferrer" aria-label="Instagram")
                            i.fab.fa-instagram
                        a(href="https://x.com/yourprofile" target="_blank" rel="noopener noreferrer" aria-label="X")
                            i.fab.fa-twitter
                
                .footer-section
                    h4.footer-heading Menu
                    ul.footer-links
                        li: a(href="/") Home
                        li: a(href="/#categories") Categories     
                        li: a(href="/#about") About
                        li: a(href="/#contact") Contact us
                
                .footer-section
                    h4.footer-heading Categories
                    ul.footer-links
                        li: a(href="/category/finance") Finance
                        li: a(href="/category/psychology") Psychology
                        li: a(href="/category/romance") Romance
                        li: a(href="/category/selfhelp") Self-Help
                        li: a(href="/category/fiction") Fiction
                        li: a(href="/category/horror") Horror

            .footer-bottom
                p.copyright &copy; 2024 Book Bliss. All Rights Reserved


        //- Scripts
        script.
            // Add instant search functionality (optional)
            document.querySelector('.search').addEventListener('keyup', function(e) {
                if (e.key === 'Enter') {
                    e.target.closest('form').submit();
                }
            });

            // Prevent empty searches
            document.querySelector('.search-form').addEventListener('submit', function(e) {
                const searchInput = this.querySelector('.search');
                if (!searchInput.value.trim()) {
                    e.preventDefault();
                }
            });

        script(src="/javascripts/script.js")
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>

        block scripts