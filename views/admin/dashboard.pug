// /views/admin/dashboard.pug
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Admin Dashboard | Book Bliss
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
        style.
            .sidebar {
                min-height: 100vh;
                background: #343a40;
                color: white;
            }
            .sidebar a {
                color: white;
                text-decoration: none;
                padding: 10px 15px;
                display: block;
                transition: background-color 0.3s;
            }
            .sidebar a:hover {
                background-color: #495057;
            }
            .main-content {
                padding: 20px;
            }
            .nav-link.active {
                background-color: #495057;
            }
    body
        .container-fluid
            .row
                .col-md-2.sidebar.p-0
                    h3.p-3.mb-4 Admin Panel
                    ul.nav.flex-column
                        li.nav-item
                            a.nav-link(href="/admin/books" class=(path === '/admin/books' ? 'active' : '')) Books
                        li.nav-item
                            a.nav-link(href="/admin/customers" class=(path === '/admin/customers' ? 'active' : '')) Customers
                        li.nav-item
                            a.nav-link(href="/admin/orders" class=(path === '/admin/orders' ? 'active' : '')) Orders
                        li.nav-item
                            a.nav-link(href="/admin/gift-cards" class=(path === '/admin/gift-cards' ? 'active' : '')) Gift Cards
                .col-md-10.main-content
                    block content