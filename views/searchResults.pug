extends index

block styles
    style.
    
        /* Search Results Container */
        .search-results {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1.5rem;
        }

        /* Search Header */
        .search-header {
            text-align: center;
            margin-bottom: 3rem;
        }

        .search-header h2 {
            color: #2c3e50;
            font-size: 2rem;
            position: relative;
            display: inline-block;
            padding-bottom: 1rem;
        }

        .search-header h2::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 3px;
            background: #3498db;
            border-radius: 2px;
        }

        /* Books Grid */
        .books-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 2rem;
            padding: 1rem;
        }

        /* Book Card */
        .book-card {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
        }

        .book-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.15);
        }

        /* Book Image */
        .book-image {
            position: relative;
            overflow: hidden;
            height: 350px;
        }

        .book-card img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .book-card:hover img {
            transform: scale(1.05);
        }

        /* Book Info */
        .book-info {
            padding: 1.5rem;
            display: flex;
            flex-direction: column;
            gap: 0.8rem;
            background: linear-gradient(to bottom, #ffffff, #f8f9fa);
        }

        .book-info h3 {
            font-size: 1.25rem;
            color: #2c3e50;
            margin: 0;
            font-weight: 600;
            line-height: 1.4;
        }

        .book-info p {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin: 0;
        }

        .book-info i {
            color: #3498db;
            font-size: 1.2rem;
        }

        .author {
            color: #666;
            font-size: 0.95rem;
        }

        .genre {
            color: #3498db;
            font-size: 0.9rem;
            font-weight: 500;
        }

        .price {
            font-size: 1.2rem;
            font-weight: 600;
            color: #2c3e50;
        }

        /* Buttons */
        .btn-details{
           width: 100%;
            padding: 0.75rem;
            background-color:  #10839dbb;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.2s;
       }
       .btn-details:hover{
            background-color: #10839d6d;
       }
        .add-to-cart, .out-of-stock {
            width: 100%;
            padding: 0.75rem;
            background-color:  #10839dbb;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.2s;
        }

        .add-to-cart {
            background: #3498db;
            color: white;
        }

        .add-to-cart:hover {
            background: #2980b9;
            transform: translateY(-2px);
        }

        .out-of-stock {
            background: #e0e0e0;
            color: #666;
            cursor: not-allowed;
        }

        /* No Results */
        .no-results {
            text-align: center;
            padding: 4rem 2rem;
            background: #f8f9fa;
            border-radius: 15px;
            margin: 2rem auto;
            max-width: 500px;
        }

        .no-results i {
            font-size: 3rem;
            color: #3498db;
            margin-bottom: 1rem;
        }

        .no-results p {
            font-size: 1.2rem;
            color: #666;
            margin: 1rem 0;
        }

        .return-home {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.8rem 1.5rem;
            background: #3498db;
            color: white;
            text-decoration: none;
            border-radius: 8px;
            transition: all 0.3s ease;
            margin-top: 1rem;
        }

        .return-home:hover {
            background: #2980b9;
            transform: translateY(-2px);
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .books-grid {
                grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
                gap: 1.5rem;
            }

            .book-image {
                height: 300px;
            }

            .book-title {
                font-size: 1.1rem;
            }
        }

        @media (max-width: 480px) {
            .search-results {
                padding: 0 1rem;
            }

            .search-header h2 {
                font-size: 1.5rem;
            }

            .books-grid {
                grid-template-columns: 1fr;
            }
        }

block content
    .search-results
        .search-header
            h2 Search Results for "#{searchQuery}"
        
        if books.length > 0
            .books-grid
                each book in books
                    .book-card
                        .book-image
                            if book.cover_image_url
                                img(src=book.cover_image_url alt=book.title)
                            else
                                img(src="/images/default-book.png", alt="Default book cover")
                        .book-info
                            h3= book.title
                            p.author 
                                i.bx.bxs-user
                                span= book.author
                            p.genre
                                i.bx.bxs-book
                                span= book.genre
                            p.price 
                                i.bx.bx-dollar
                                span $#{book.price}
                            button.btn-details(onclick=`window.location.href='/book/${book.book_id}'`) View Details
                            if book.stock > 0
                                button.add-to-cart(data-book-id=book.book_id)
                                    i.bx.bx-cart-add
                                    span Add to Cart
                            else
                                button.out-of-stock(disabled)
                                    i.bx.bx-x
                                    span Out of Stock
        else
            .no-results
                i.bx.bx-search-alt
                p No books found matching "#{searchQuery}"
                a.return-home(href="/") 
                    i.bx.bx-home
                    span Return to Home