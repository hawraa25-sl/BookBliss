extends ../index

block head-ext
    style
        include ../styles/giftcard.css
        include ../styles/checkout.css

block content
    #gccontainer
        h1#gctitle Buy a New Gift Card
        
        if error
            p.error-message= error
        
        form#gcform(action="/giftcard/buy" method="POST")
            .amount-section
                label#amountlabel(for="amount") Enter Amount:
                input#amountinput(
                    type="number" 
                    name="amount" 
                    min="10" 
                    required 
                    value=20
                    placeholder="Minimum $10"
                )

            .card-section
                h2 Payment Details
                
                label(for="card_number") Card Number:
                input#card_number(
                    type="text"
                    name="card_number"
                    placeholder="1234 5678 9012 3456"
                    pattern="[0-9]{4} [0-9]{4} [0-9]{4} [0-9]{4}"
                    maxlength="19"
                    required
                    oninput="this.value = this.value.replace(/[^0-9]/g, '').replace(/(.{4})/g, '$1 ').trim()"
                )

                .card-flex
                    .card-exp
                        label(for="expiry_date") Expiry Date:
                        input#expiry_date(
                            type="text"
                            name="expiry_date"
                            placeholder="MM/YY"
                            pattern="(0[1-9]|1[0-2])\/([0-9]{2})"
                            maxlength="5"
                            required
                            oninput="this.value = this.value.replace(/[^0-9]/g, '').replace(/^([0-9]{2})([0-9]{2})$/g, '$1/$2')"
                        )
                    
                    .card-cvv
                        label(for="cvv") CVV:
                        input#cvv(
                            type="text"
                            name="cvv"
                            placeholder="123"
                            pattern="[0-9]{3,4}"
                            maxlength="4"
                            required
                            oninput="this.value = this.value.replace(/[^0-9]/g, '')"
                        )

                label(for="card_name") Name on Card:
                input#card_name(
                    type="text"
                    name="card_name"
                    placeholder="Enter name as shown on card"
                    required
                )

            button#gcsubmit(type="submit") Purchase Gift Card

        if message
            p#gcmessage= message