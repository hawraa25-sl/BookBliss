extends ../index

block head-ext
  title Update Name
  style
    include ../styles/account.css

block content
  .account-container
    h1 Update Your Name
    
    form.update-form(action="/account/update-name" method="POST")
      label(for="first_name") First Name:
      input#first_name(
        type="text" 
        name="first_name" 
        value=user.first_name
        placeholder=user.first_name
        required
      )

      label(for="last_name") Last Name:
      input#last_name(
        type="text" 
        name="last_name" 
        value=user.last_name
        placeholder=user.last_name
        required
      )

      .button-group
        button.btn-submit(type="submit") Update Name
        a.btn-cancel(href="/account") Back to Account

      if error
        .error-message= error
      if successMessage
        .success-message= successMessage